<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ViewSwitcher
        android:id="@+id/gift_listview_custom_row_viewswitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/gift_listview_custom_row_img"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:contentDescription="@string/gift_image_description"
            android:scaleType="center"
            android:src="@drawable/ic_fa_image" />

        <VideoView
            android:id="@+id/gift_listview_custom_row_video"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:contentDescription="@string/gift_video_description"
            android:scaleType="center" />
    </ViewSwitcher>

    <TextView
        android:id="@+id/gift_listview_custom_row_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="@string/title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/gift_listview_custom_row_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="@string/description"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/gift_listview_custom_row_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/like"
            android:focusable="false"
            android:src="@drawable/ic_fa_heart_o" />

        <TextView
            android:id="@+id/gift_listview_custom_row_num_Likes_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:paddingRight="20dp"
            android:text="@string/zero_default_value"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/gift_listview_custom_row_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:contentDescription="@string/flag"
            android:focusable="false"
            android:src="@drawable/ic_fa_flag_o" />

        <Button
            android:id="@+id/gift_listview_custom_row_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/chain"
            android:focusable="false" />
    </LinearLayout>

</LinearLayout>